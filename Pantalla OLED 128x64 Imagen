void setup() {
  Serial.begin(9600);

  if(!display.begin(SSD1306_SWITCHCAPVCC, DIRECCION)){
    Serial.println(F("FALLOOO"));
  }

  display.clearDisplay();
  display.drawBitmap( (display.width() - LOGO_ANCHO)/2, ((display.height() - LOGO_ALTO)/2)+15, logo, LOGO_ANCHO, LOGO_ALTO, WHITE);
  display.display();

}
 
void loop() {
}
